{
  "extends": [
    "standard",
    "prettier",
    "prettier/standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "prettier",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "space-before-function-paren": 0,
    "new-cap": 0,
    "prettier/prettier": 2
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
